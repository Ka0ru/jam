<%= form_for(@product) do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %>

	<%= f.label :photo %>
	<%= f.file_field :photo %>

	<%= f.label :price %>
	<%= f.text_field :price %>

	<%= f.label :margin %>
	<%= f.text_field :margin %>

	<%= f.label :description %>
	<%= f.text_area :description %>

	<% @ingredients.each_with_index do |ingredient, i| %>
			<%= fields_for :products_ingredients do |a| %>
				<%= label_tag ingredient.name %>
				<%= a.check_box :ingredient_id, :name => "products_ingredients[#{i}][ingredient_id]" %>
				<%= a.text_field :nb_ingredient, :name => "products_ingredients[#{i}][nb_ingredient]" %>
			<% end %>
	<% end %>

	<%= f.submit %>
<% end %>