<%= form_for(@product) do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %>

	<%= f.label :photo %>
	<%= f.file_field :photo %>

	<%= f.label :price %>
	<%= f.text_field :price %>

	<%= f.label :margin %>
	<%= f.text_field :margin %>

	<%= f.label :description %>
	<%= f.text_area :description %>

	<% @ingredients.each do |ingredient| %>
			<%= label_tag ingredient.name %>
			<%= check_box_tag 'product[ingredient_ids][]', ingredient.id %>

			<%= label_tag 'Quantity' %>
			<%= number_field_tag :nb_ingredient, :nb_ingredient %>
	<% end %>

	<%= f.submit %>
<% end %>