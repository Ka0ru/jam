<%= form_for(@product) do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %>

	<%= f.label :photo %>
	<%= f.file_field :photo %>

	<%= f.label :price %>
	<%= f.text_field :price %>

	<%= f.label :margin %>
	<%= f.text_field :margin %>

	<%= f.label :description %>
	<%= f.text_area :description %>

	<%= f.submit %>
<% end %>